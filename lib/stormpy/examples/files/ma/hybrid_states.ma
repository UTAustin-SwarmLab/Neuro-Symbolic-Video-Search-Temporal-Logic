module hybrid_states
	
	s : [0..4];
	
	[] (s=0) -> 0.8 : (s'=0) + 0.2 : (s'=2);
	[] (s=0) -> 1 : (s' = 1);
	<> (s=0) -> 3 : (s' = 1);
	<> (s=1) -> 9 : (s'=0) + 1 : (s'=3);
	<> (s=2) -> 12 : (s'=4);
	[] (s=3) -> 1 : true;
	[] (s=3) -> 1 : (s'=4);
	<> (s=3) -> 2 : (s'=3) + 2 : (s'=4);
	[] (s=4) -> 1 : true;
	<> (s=4) -> 3 : (s'=3);	
	
endmodule
